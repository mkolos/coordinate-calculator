{% form_theme form 'bootstrap_4_layout.html.twig' %}


{{ form_start(form) }}
    <div class="square-form-label">
        <h2>{{ form_label(form) }}</h2>
    </div>
    <div class="square-form-errors">
        {{ form_errors(form) }}
    </div>

    <div class="square-fields">
        <div class="point-a">
            <h4>Point A:</h4>
            {{ form_row(form.latitudeA) }}
            {{ form_row(form.longitudeA) }}

        </div>
        <div class="point-b">
            <h4>Point B:</h4>
            {{ form_row(form.latitudeB) }}
            {{ form_row(form.longitudeB) }}
        </div>
        <div class="col" id="some-custom-id">
        </div>
    </div>
{{ form_end(form) }}

{% if square is defined %}
    <div>
        <h4>Point C</h4>
        <ul>
            <li>Latitude {{ square.latitudeC }}</li>
            <li>Longitude {{ square.longitudeC }}</li>
        </ul>
    </div>
    <div>
        <h4>Point D</h4>
        <ul>
            <li>Latitude {{ square.latitudeD }}</li>
            <li>Longitude {{ square.longitudeD }}</li>
        </ul>
    </div>
    <div>
        <h4>Permiter</h4>
        <p>{{ square.perimeter }} meters</p>
    </div>
    <div>
        <h4>Area</h4>
        <p>{{ square.area }} squaremeters</p>
    </div>
    <div>
        <h4>Total cost</h4>
        <p>{{ square.costOfFence }} EUR</p>
    </div>

{% endif %}